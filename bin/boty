#!/bin/bash

## xdotool

[[ $1 == "exit" ]] && exit

xdotool exec st
sleep .3
xdotool type "ncmpcpp"
xdotool key Return
xdotool exec st
sleep .3
xdotool type "cava"
xdotool key Return
xdotool exec st
sleep .3
xdotool type "mpc play"
xdotool key Return
xdotool type "c"
xdotool key Return
xdotool type "SETUP NUMBER 1 IS READY "
xdotool key ctrl+c
