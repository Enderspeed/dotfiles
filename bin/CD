#!/bin/bash
if [ `pwd` = "/home/finn" ]; then
    fzf=`ls -Ra 2> /dev/null | awk '/.\//{ print }' | sed "s/://" | fzf`
    cd $fzf
else
    dir=$(pwd)
    cd
    fzf=`ls -Ra 2> /dev/null | awk '/.\//{ print }' | sed "s/://" | fzf`
    cd $fzf
    if [ `pwd` = "/home/finn" ]; then
        cd $dir
    fi
fi
